<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context="com.smartpolice.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/abc"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:textColor="#FAFAFA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:textSize="20dp"
            android:text="CAR INFO"/>
    </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plate No:"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#111" />

            <TextView
                android:id="@+id/plateNoTextView"
                android:textColor="#111"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginLeft="10dp"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner:"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#111" />

            <TextView
                android:id="@+id/ownerTextView"
                android:textColor="#111"
                android:layout_marginLeft="10dp"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_height="wrap_content"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Telephone:"/>

            <TextView
                android:id="@+id/telTextView"
                android:textColor="#111"
                android:layout_marginLeft="10dp"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Category:"/>

            <TextView
                android:id="@+id/categoryTextView"
                android:textColor="#111"
                android:layout_marginLeft="10dp"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsmedium"
                />

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="30dp">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/abc"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:textColor="#FAFAFA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:textSize="20dp"
                android:text="CAR STATUS"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Pending: "/>

            <TextView
                android:id="@+id/totalDelaysTextView"
                android:textColor="#111"
                android:layout_marginLeft="10dp"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsmedium"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Penalty:"/>

            <TextView
                android:id="@+id/penaltyAmoTextView"
                android:textColor="#111"
                android:layout_marginLeft="10dp"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsmedium"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Total:"/>

            <TextView
                android:id="@+id/totalAmoTextView"
                android:textColor="#111"
                android:layout_marginLeft="10dp"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsmedium"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv"/>
        </LinearLayout>




        <View
            android:layout_width="wrap_content"
            android:layout_height="30dp">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <Button
            android:id="@+id/scanBtn"
            style="@style/buttonNumberStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="0dp"
            android:background="@color/abc"
            android:text="@string/Qrcode" />


            <Button
                style="@style/buttonNumberStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="10dp"
                android:background="@color/abc"
                android:text="@string/contrav"
                android:id="@+id/btnContravention"
                android:onClick="moveToContravention"
                />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>